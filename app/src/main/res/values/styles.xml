<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="PrimaryButton">
        <item name="android:background">@drawable/bg_primary_button</item>
        <item name="android:textColor">@color/white</item>
        <item name="textAllCaps">false</item>
        <item name="android:layout_width">0dp</item>
    </style>

    <style name="SecondaryButton">
        <item name="android:background">@drawable/bg_secondary_button</item>
        <item name="android:textColor">@color/black</item>
        <item name="textAllCaps">false</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:fontFamily">@font/archivo</item>
    </style>

    <style name="NormalText">
        <item name="android:fontFamily">@font/archivo</item>
    </style>

    <style name="RegularText">
        <item name="android:fontFamily">@font/archivo_regular</item>
    </style>

    <style name="BoldText">
        <item name="android:fontFamily">@font/archivo</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="RecyclerViewDescription">
        <item name="android:fontFamily">@font/archivo_regular</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/black_65</item>
    </style>
</resources>